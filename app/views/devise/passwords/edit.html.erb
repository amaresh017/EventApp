<div class="container-fluid mt-5">
  <div class="col-md-4 col-sm-12 mx-auto">
    <div class="card border border-danger shadow">
      <div class="card-header text-center">
        <h4>Change your password</h4>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form_horizontal"}) do |f| %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.error_notification %>
          <%= f.input :password,
                  label: "New password",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                  label: "Confirm your new password",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>

          <div class="actions">
            <%= f.button :submit, "Change my password", class: "btn btn-danger btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

